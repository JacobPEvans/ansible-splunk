# Splunk indexes configuration
# Generated by Ansible

{% for index in splunk_docker_indexes %}
[{{ index.name }}]
homePath = $SPLUNK_DB/{{ index.name }}/db
coldPath = $SPLUNK_DB/{{ index.name }}/colddb
thawedPath = $SPLUNK_DB/{{ index.name }}/thaweddb
maxTotalDataSizeMB = {{ index.max_size_mb }}
frozenTimePeriodInSecs = {{ index.frozen_time_secs }}

{% endfor %}
